<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wang.mapper.UserMapper">
    <select id="findByUsername" parameterType="String" resultType="User">
        select * from white_jotter.user
        <where>
            <if test="username != null">
                username = #{username};
            </if>
        </where>
    </select>

    <select id="getByUsernameAndPassword" resultType="User">
        select * from white_jotter.user where username=#{username} and password=#{password};
    </select>

    <update id="addUser" parameterType="User">
        insert into white_jotter.user(username, password,salt) values (#{username}, #{password},#{salt})
    </update>

    <select id="findAll" resultType="User">
        select * from white_jotter.user;
    </select>

    <update id="save" parameterType="User">
        update user set name=#{name},phone=#{phone}, email=#{email} where id = #{id};
    </update>
</mapper>